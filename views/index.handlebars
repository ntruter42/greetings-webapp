<div class="greetings flex col">
	<h1>Greeting</h1>

	<form class="flex col" action="/greetings" method="post">
		<div class="{{message.type}} message">{{message.text}}</div>

		<input type="text" name="name" id="name">

		<div class="language-select flex row">
			<label for="english">
				<input id="english" type="radio" name="language" value="english">
				<span>English</span>
			</label>
			<label for="afrikaans">
				<input id="afrikaans" type="radio" name="language" value="afrikaans">
				<span>Afrikaans</span>
			</label>
			<label for="xhosa">
				<input id="xhosa" type="radio" name="language" value="xhosa">
				<span>isiXhosa</span>
			</label>
		</div>

		<button type="submit">Greet Me</button>
	</form>

	<div class="greet-message fade-in {{hidden}}">{{greeting}}</div>
</div>